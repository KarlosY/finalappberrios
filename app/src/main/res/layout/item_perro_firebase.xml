<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_splach3"
        tools:ignore="MissingConstraints">

        <!-- ... tus TextViews aquÃ­ ... -->
        <TextView
            android:id="@+id/nombr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Nombre:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="bre"
            />
        <TextView
            android:id="@+id/raza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Raza:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/breedGroupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bre"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/exvidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Experanza de vida:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/lifeSpanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bre"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tempe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Temperamento:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/temperamentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bre"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/ori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Origen:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/originText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bre"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/imgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imagen:"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageViewDogs"
            android:layout_width="match_parent"
            android:layout_height="130dp"

            app:srcCompat="@drawable/ic_usuario" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
